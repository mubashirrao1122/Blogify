<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <title>Sign In - Blogify</title>
    <style>
      body {
        background: #f8f9fa;
      }
      .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
      }
      .auth-card {
        background: white;
        border-radius: 0.75rem;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        border: 1px solid #e9ecef;
        padding: 2rem;
        max-width: 400px;
        margin: 0 auto;
      }
      .auth-header {
        text-align: center;
        margin-bottom: 2rem;
      }
      .auth-title {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }
      .form-control:focus {
        border-color: #495057;
        box-shadow: 0 0 0 0.2rem rgba(73, 80, 87, 0.1);
      }
      .btn-auth {
        background: #495057;
        border-color: #495057;
        width: 100%;
        padding: 0.75rem;
        font-weight: 500;
      }
      .btn-auth:hover {
        background: #343a40;
        border-color: #343a40;
      }
      .auth-link {
        color: #6c757d;
        text-decoration: none;
      }
      .auth-link:hover {
        color: #495057;
      }
    </style>
  </head>
  <body>
    <%- include('partials/nav.ejs', { user: null, error: typeof error !== 'undefined' ? error : null }) %>

    <div class="auth-container">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 col-lg-5">
            <div class="auth-card">
              <div class="auth-header">
                <h2 class="auth-title">Welcome Back</h2>
                <p class="text-muted">Sign in to your account</p>
              </div>

              <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger" role="alert">
                  <%= error %>
                </div>
              <% } %>

              <form action="/user/signin" method="post">
                <div class="mb-3">
                  <label for="email" class="form-label">Email address</label>
                  <input
                    type="email"
                    name="email"
                    class="form-control"
                    id="email"
                    placeholder="Enter your email"
                    required
                  />
                </div>
                
                <div class="mb-4">
                  <label for="password" class="form-label">Password</label>
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    id="password"
                    placeholder="Enter your password"
                    required
                  />
                </div>
                
                <button type="submit" class="btn btn-auth text-white mb-3">
                  <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </button>
              </form>

              <div class="text-center">
                <p class="text-muted mb-0">
                  Don't have an account? 
                  <a href="/user/signup" class="auth-link fw-bold">Sign up here</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/script.ejs') %>
  </body>
</html>
