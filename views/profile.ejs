<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title><%= profileUser.fullname %>'s Profile - Blogify</title>
    <style>
        body {
            background: #f8f9fa;
        }
        .profile-header {
            background: white;
            border-radius: 0.75rem;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            border: 1px solid #e9ecef;
        }
        .profile-avatar {
            width: 100px;
            height: 100px;
            border: 3px solid #6c757d;
        }
        .stat-item h5 {
            color: #495057;
        }
        .btn-primary {
            background: #495057;
            border-color: #495057;
        }
        .btn-primary:hover {
            background: #343a40;
            border-color: #343a40;
        }
        .btn-outline-secondary:hover {
            background: #6c757d;
            border-color: #6c757d;
        }
        .blog-card {
            background: white;
            border-radius: 0.75rem;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            border: 1px solid #e9ecef;
        }
    </style>
</head>
<body>
    <%- include('partials/nav.ejs', { user: user, error: null }) %>
    
    <div class="container mt-4">
        <!-- Profile Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="profile-header">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <img src="<%= profileUser.profileImage || '/images/default.png' %>" 
                                 alt="<%= profileUser.fullname %>" 
                                 class="profile-avatar rounded-circle mb-3" 
                                 style="object-fit: cover;">
                        </div>
                        <h1 class="h3 mb-2"><%= profileUser.fullname %></h1>
                        <p class="text-muted mb-3">
                            <i class="fas fa-envelope me-2"></i><%= profileUser.email %>
                        </p>
                        <div class="d-flex justify-content-center gap-4">
                            <div class="stat-item text-center">
                                <h5 class="mb-0"><%= blogs.length %></h5>
                                <small class="text-muted">Stories</small>
                            </div>
                            <div class="stat-item text-center">
                                <h5 class="mb-0">
                                    <%= profileUser.createdAt ? new Date(profileUser.createdAt).getFullYear() : 'N/A' %>
                                </h5>
                                <small class="text-muted">Member Since</small>
                            </div>
                            <div class="stat-item text-center">
                                <h5 class="mb-0">
                                    <%= profileUser.role.charAt(0).toUpperCase() + profileUser.role.slice(1) %>
                                </h5>
                                <small class="text-muted">Role</small>
                            </div>
                        </div>
                        <% if (user && user._id === profileUser._id.toString()) { %>
                            <div class="mt-3">
                                <a href="/blog/add-new" class="btn btn-primary me-2">
                                    <i class="fas fa-plus me-2"></i>Write New Story
                                </a>
                                <a href="/user/settings" class="btn btn-outline-secondary">
                                    <i class="fas fa-cog me-2"></i>Settings
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- User's Blogs Section -->
        <div class="row mb-3">
            <div class="col-12">
                <h3 class="mb-3">
                    <% if (user && user._id === profileUser._id.toString()) { %>
                        My Stories
                    <% } else { %>
                        <%= profileUser.fullname %>'s Stories
                    <% } %>
                </h3>
            </div>
        </div>

        <% if (blogs && blogs.length > 0) { %>
            <div class="row">
                <% blogs.forEach(blog => { %>
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="blog-card h-100">
                            <% if (blog.coverImageURL) { %>
                                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>" style="height: 180px; object-fit: cover;">
                            <% } else { %>
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            <% } %>
                            
                            <div class="card-body d-flex flex-column p-3">
                                <h6 class="card-title">
                                    <a href="/blog/<%= blog._id %>" class="text-decoration-none text-dark">
                                        <%= blog.title.length > 45 ? blog.title.substring(0, 45) + '...' : blog.title %>
                                    </a>
                                </h6>
                                
                                <p class="card-text text-muted flex-grow-1 small">
                                    <%= blog.body.length > 90 ? blog.body.substring(0, 90) + '...' : blog.body %>
                                </p>
                                
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            <%= blog.createdAt ? new Date(blog.createdAt).toLocaleDateString() : 'Unknown' %>
                                        </small>
                                        <% if (user && user._id === profileUser._id.toString()) { %>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm">View</a>
                                                <a href="/blog/edit/<%= blog._id %>" class="btn btn-outline-secondary btn-sm">Edit</a>
                                            </div>
                                        <% } else { %>
                                            <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary btn-sm">Read More</a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-12 text-center py-5">
                    <div class="card shadow-sm">
                        <div class="card-body p-5">
                            <i class="fas fa-blog fa-5x text-muted mb-4"></i>
                            <h3 class="text-muted">No blog posts yet</h3>
                            <% if (user && user._id === profileUser._id.toString()) { %>
                                <p class="text-muted">Start sharing your thoughts with the world!</p>
                                <a href="/blog/add-new" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Create Your First Blog
                                </a>
                            <% } else { %>
                                <p class="text-muted"><%= profileUser.fullname %> hasn't written any blogs yet.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    
    <%- include('partials/script.ejs') %>
</body>
</html>
